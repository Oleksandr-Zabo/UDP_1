<Window x:Class="UDPServerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="UDP Server" Height="500" Width="500">
    <Grid>
        <Button Content="Start Server" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Click="StartServer_Click"/>
        <Button Content="Stop Server" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="130,0,0,0" Click="StopServer_Click"/>
        
        <ListBox Name="ClientList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="460" Height="150" Margin="0,50,0,0"/>
        <TextBox Name="LogBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="460" Height="100" Margin="0,210,0,0" IsReadOnly="True" TextWrapping="Wrap"/>

        <ListBox Name="ProductList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="460" Height="100" Margin="0,320,0,0"/>
    </Grid>
</Window>
